{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{ teacher.url_avatar }}) no-repeat center center/ cover"></section>

        <section class="details">
            <h3>Professor</h3>
            <div class="item">
                <div>Nome do instrutor</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="item">
                <div>idade</div>
                <div>{{ teacher.age }}</div>
            </div>
            <div class="item">
                <div>Escolaridade</div>
                <div>{{teacher.schooling}}</div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span>{{ teacher.schoolType }}</span>

                </div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                        {% for disciplinas in teacher.disciplina %}
                          <span>{{ disciplinas }}</span>
                        {% endfor %}
                      
      
                </div>
            </div>
            <div class="item">
                <div>Data de cadastro na plataforma</div>
                <div>{{ teacher.created_at }}</div>
            </div>
           
            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
            
        </section>
    </div>
{% endblock content %}